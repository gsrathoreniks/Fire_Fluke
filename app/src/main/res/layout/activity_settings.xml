<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.avinash_singh.firebase.SettingsActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="200sp"
        android:layout_height="200sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70sp"
        android:id="@+id/profile_image"
        android:src="@drawable/profile" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Avinash Singh"
        android:textSize="25sp"
        android:paddingTop="25sp"
        android:textColor="#c7c6c6"
        android:id="@+id/display_name"
        android:layout_centerInParent="true"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hi there, I am using Fire Fluke"
        android:textColor="#FFC7C6C6"
        android:id="@+id/display_status"
        android:layout_below="@+id/display_name"
        android:gravity="center"
        android:paddingTop="20sp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHANGE PROFILE"
        android:id="@+id/profile_change"
        android:layout_below="@+id/display_status"
        android:textColor="@color/colorPrimaryDark"
        android:layout_centerInParent="true"
        android:layout_marginTop="50sp"/>

    <Button
        android:id="@+id/status_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_change"
        android:layout_centerInParent="true"
        android:layout_marginTop="5sp"
        android:textColor="#fff"
        android:backgroundTint="@color/colorAccent"
        android:text="CHANGE status" />

</RelativeLayout>
